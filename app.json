{
  "expo": {
    "name": "AgriMarket",
    "slug": "agrimarket",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.agrimarket.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "AgriMarket needs location access to help plan your farm and show relevant weather data."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2E7D32"
      },
      "package": "com.agrimarket.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "AgriMarket needs location access to help plan your farm and show local weather."
        }
      ]
    ]
  }
}
